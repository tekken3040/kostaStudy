<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editID_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.247" />

    <EditText
        android:id="@+id/editPassword_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editID_join"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnJoinOk"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/editPassword_join"
        app:layout_constraintStart_toStartOf="@+id/editPassword_join"
        app:layout_constraintTop_toBottomOf="@+id/editPassword_join" />

    <Button
        android:id="@+id/btnJoinCancel"
        android:layout_width="210dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="Join"
        app:layout_constraintEnd_toEndOf="@+id/btnJoinOk"
        app:layout_constraintStart_toStartOf="@+id/btnJoinOk"
        app:layout_constraintTop_toBottomOf="@+id/btnJoinOk" />
</androidx.constraintlayout.widget.ConstraintLayout>